
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="carto-domain" transaction-type="RESOURCE_LOCAL">

		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<class>org.vaadin.addons.auth.domain.Action</class>
		<class>org.vaadin.addons.auth.domain.Role</class>
		<class>org.vaadin.addons.auth.domain.Group</class>
		<class>org.vaadin.addons.auth.domain.PermissionTarget</class>
		<class>org.vaadin.addons.auth.domain.Permission</class>
		
		<class>org.issg.ibis.domain.BiologicalStatus</class>
		<class>org.issg.ibis.domain.Biome</class>
		<class>org.issg.ibis.domain.Content</class>
		<class>org.issg.ibis.domain.ContentType</class>
		<class>org.issg.ibis.domain.Country</class>
		<class>org.issg.ibis.domain.DesignatedAreaType</class>
		<class>org.issg.ibis.domain.ImpactMechanism</class>
		<class>org.issg.ibis.domain.IucnCategory</class>
		<class>org.issg.ibis.domain.Location</class>
		<class>org.issg.ibis.domain.LocationSummary</class>
		<class>org.issg.ibis.domain.LocationType</class>
		<class>org.issg.ibis.domain.OrganismType</class>
		<class>org.issg.ibis.domain.ConservationClassification</class>
		<class>org.issg.ibis.domain.Reference</class>
		<class>org.issg.ibis.domain.Region</class>
		<class>org.issg.ibis.domain.Species</class>
		<class>org.issg.ibis.domain.SpeciesImpact</class>
		<class>org.issg.ibis.domain.SpeciesLocation</class>
		<class>org.issg.ibis.domain.SpeciesSummary</class>
		<class>org.issg.ibis.domain.UploadLog</class>
		<class>org.issg.ibis.domain.view.LocationView</class>
		<class>org.issg.ibis.domain.view.ResourceDescription</class>
		<class>org.issg.ibis.domain.view.SpeciesExtent</class>
		<class>org.issg.ibis.domain.WebserviceCache</class>
			
		<!-- 
		 -->
	
		<properties>

			<property name="hibernate.archive.autodetection" value="class" />

			<property name="hibernate.id.new_generator_mappings" value="true" />

			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.dialect"
				value="org.hibernate.spatial.dialect.postgis.PostgisDialect" />

			<property name="connection.provider_class"
				value="org.hibernate.connection.C3P0ConnectionProvider" />
			<property name="hibernate.c3p0.acquire_increment" value="1" />
			<property name="hibernate.c3p0.acquire_retry_attempts" value="0" />
			<property name="hibernate.c3p0.idle_test_period" value="100" />
			<property name="hibernate.c3p0.max_size" value="10" />
			<property name="hibernate.c3p0.max_statements" value="0" />
			<property name="hibernate.c3p0.min_size" value="5" />
			<property name="hibernate.c3p0.timeout" value="100" />

			<!-- Enable Hibernate's automatic session context management -->
			<property name="hibernate.current_session_context_class"
				value="thread" />

		</properties>

	</persistence-unit>

</persistence>